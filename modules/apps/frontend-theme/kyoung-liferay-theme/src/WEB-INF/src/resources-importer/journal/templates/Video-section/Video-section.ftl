<section id="video">
    <div class="video-overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="video-area">
                        <h2>Watch Promo Video</h2>
                        <a id='kyTooltip' title="Click To Play" class="video-play-btn" href="#"><span class="fa fa-play" aria-hidden="true"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="video-content">
        <div class="video-iframe-area">
            <a class="video-close-btn" href="#"><span class="fa fa-times" aria-hidden="true"></span></a>
            <iframe class="video-iframe" frameborder="0" height="480" src="${VideoURL.getData()}" width="854" allowfullscreen></iframe>
        </div>
    </div>
</section>